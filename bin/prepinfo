# $Header: /local/data/ulm/cvs/history/var/cvsroot/gentoo-src/portage/bin/prepinfo,v 1.3 2002/11/23 19:21:58 vapier Exp $

if [ -z "$1" ] ; then
	rm -f ${D}usr/info/dir
	gzip -f -9 ${D}usr/info/*
else
	rm -f "${D}$1"/info/dir
	gzip -f -9 "${D}$1"/info/*
fi
