# $Header: /local/data/ulm/cvs/history/var/cvsroot/gentoo-src/portage/bin/preplib,v 1.7 2004/10/04 13:56:50 vapier Exp $

if [ -z "${CONF_LIBDIR}" ]; then
	# we need this to default to lib so that things dont break
	CONF_LIBDIR="lib"
fi

if [ -z "$1" ] ; then
	z="${D}usr/${CONF_LIBDIR}"
else
	z="${D}$1/${CONF_LIBDIR}"
fi

if [ -d "${z}" ] ; then
	ldconfig -n -N "${z}"
fi
