# $Header: /local/data/ulm/cvs/history/var/cvsroot/gentoo-src/portage/bin/Attic/find-packages,v 1.3 2003/02/22 16:59:08 carpaski Exp $

filelist=`sed "s/['\"]/\\\&/g"`

for f in $filelist ; do
	file=`grep -r "$f ->" /var/db/pkg/*/*/CONTENTS`
	file=${file#/*/*/*/*/}
	file=${file%*/CONTENTS:*}
	echo $file
done | sort -u
