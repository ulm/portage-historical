# $Header: /local/data/ulm/cvs/history/var/cvsroot/gentoo-src/portage/bin/Attic/find-packages,v 1.2 2002/11/23 19:21:58 vapier Exp $

filelist=`sed "s/['\"]/\\\&/g"`

for f in $filelist ; do
	file=`grep -r "$f ->" /var/db/pkg/*/*/CONTENTS`
	file=${file#/*/*/*/*/}
	file=${file%*/CONTENTS:*}
	echo $file
done | sort -u
