#!/usr/bin/spython
import os
import sys

def getroot():
	try:
		a=os.environ["ROOT"]
	except:
		return "/"
	return os.path.normpath(a+"/")
		

if len(sys.argv)<=2:
	print "expecting two arguments."
	sys.exit(1)

import portage
import getopt

debug=0
stayroot=0
	
opts,pargs=getopt.getopt(sys.argv[1:],'',['debug','stayroot'])
for opt in opts:
	if opt[0]=='--debug':
		debug=1 
	if opt[0]=='--stayroot':
		stayroot=1 

# apply --stayroot option
portage.privs.stayroot(stayroot)

for x in pargs[1:]:
	try:
		a=portage.doebuild(pargs[0],x,getroot(),debug=debug)
	except KeyboardInterrupt:
		print "(interrupted by user -- ctrl-C?)"
		a=1
	if a:
		sys.exit(a)
