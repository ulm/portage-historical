# $Header: /local/data/ulm/cvs/history/var/cvsroot/gentoo-src/portage/bin/newsbin,v 1.5 2002/11/23 19:21:58 vapier Exp $

if [ -z "${T}" ] || [ -z "${2}" ] ; then
	echo "Nothing defined to do."
	exit 1
fi

rm -rf "${T}/${2}"
cp "${1}" "${T}/${2}"
dosbin "${T}/${2}"
