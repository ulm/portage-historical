# $Header: /local/data/ulm/cvs/history/var/cvsroot/gentoo-src/portage/bin/dosed,v 1.4 2002/11/23 19:21:58 vapier Exp $

mysed="s:${D}::g"

for x in "$@" ; do
	y="${D}${x}"
	if [ -a "${y}" ] ; then
		if [ -f "${y}" ] ; then
			mysrc="${T}"/`/usr/bin/basename "${y}"`
			cp "${y}" "${mysrc}"
			sed -e "${mysed}" "${mysrc}" > "${y}"
		else
			echo "${y} is not a regular file!"
			exit 1
		fi
	else
		mysed="${x}"
	fi
done
