# $Header: /local/data/ulm/cvs/history/var/cvsroot/gentoo-src/portage/bin/dosed,v 1.6 2004/01/22 05:51:45 carpaski Exp $

mysed="s:${D}::g"

for x in "$@" ; do
	y="${D}${x}"
	if [ -a "${y}" ] ; then
		if [ -f "${y}" ] ; then
			mysrc="${T}/${y##*/}"
			cp "${y}" "${mysrc}"
			sed -e "${mysed}" "${mysrc}" > "${y}"
		else
			echo "${y} is not a regular file!"
			exit 1
		fi
	else
		mysed="${x}"
	fi
done
