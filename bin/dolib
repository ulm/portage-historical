#!/bin/bash
# $Header: /local/data/ulm/cvs/history/var/cvsroot/gentoo-src/portage/bin/dolib,v 1.5 2003/02/16 03:03:41 carpaski Exp $

if [ ${#} -lt 1 ] ; then
	echo "${0}: at least one argument needed"
	exit 1
fi
if [ ! -d "${D}${DESTTREE}/lib" ] ; then
	install -d "${D}${DESTTREE}/lib"
fi

for x in "$@" ; do
	if [ -e "${x}" ] ; then
		install ${LIBOPTIONS} "${x}" "${D}${DESTTREE}/lib"
	else
		echo "${0}: ${x} does not exist"
	fi
done
