# $Header: /local/data/ulm/cvs/history/var/cvsroot/gentoo-src/portage/bin/prepalldocs,v 1.3 2002/11/23 19:21:58 vapier Exp $

z=`find ${D}/usr/share/doc -not -name "*.gz" -not -name "*.js"`

for y in ${z} ; do
	if [ -h "${y}" ] ; then
		#symlink
		linkto=`ls -l ${y} | sed -e "s:${D}::" | awk '{ printf ("%s.gz",$11) } '`
		echo "$linkto $y.gz"
		ln -sf "${linkto}" "${y}.gz"
		rm "${y}"
	else
		if [ -f "${y}" ] ; then
			gzip -f -9 "${y}"
		fi
	fi	
done
