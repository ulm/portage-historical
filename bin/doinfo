#!/bin/bash
# Copyright 1999-2003 Gentoo Technologies, Inc.
# Distributed under the terms of the GNU General Public License v2
# $Header: /local/data/ulm/cvs/history/var/cvsroot/gentoo-src/portage/bin/doinfo,v 1.6 2003/06/22 23:05:23 vapier Exp $

if [ ${#} -lt 1 ] ; then
	echo "doinfo: at least one argument needed"
	exit 1 	
fi
if [ ! -d "${D}usr/share/info" ] ; then
	install -d "${D}usr/share/info"
fi

for x in "$@" ; do
	if [ -e "${x}" ] ; then
		install -m0644 "${x}" "${D}usr/share/info"
		gzip -f -9 "${D}usr/share/info/${x##*/}"
	else
		echo "doinfo: ${x} does not exist"
	fi
done
