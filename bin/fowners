# $Header: /local/data/ulm/cvs/history/var/cvsroot/gentoo-src/portage/bin/fowners,v 1.5 2003/02/22 16:59:08 carpaski Exp $

if [ ${#} -lt 2 ] ; then
	echo "${0}: at least two arguments needed"
	exit 1
fi

OWNER="${1}"
shift
for FILE in $*; do
	chown "${OWNER}" "${D}${FILE}"
done
