#!/bin/bash
# Copyright 1999-2002 Gentoo Technologies, Inc.
# Distributed under the terms of the GNU General Public License v2
# $Header: /local/data/ulm/cvs/history/var/cvsroot/gentoo-src/portage/bin/doexe,v 1.6 2002/11/23 19:21:58 vapier Exp $

mynum=${#}
if [ ${mynum} -lt 1 ] ; then
	echo "doexe: at least one argument needed"
	exit 1
fi
if [ ! -d "${D}${EXEDESTTREE}" ] ; then
	install -d "${D}${EXEDESTTREE}"
fi

for x in "$@" ; do
	if [ -z "$DEBUGBUILD" ] ; then
		MYVAL=`file "${x}" | grep "ELF"` 
		if [ -n "$MYVAL" ] ; then
			strip "${x}"
		fi
	fi
	if [ -L "${x}" ] ; then
		cp "${x}" "${T}"
		mysrc="${T}"/`/usr/bin/basename "${x}"`
	elif [ -d "${x}" ] ; then
		echo "doexe: warning, skipping directory ${x}"
		continue
	else
		mysrc="${x}"
	fi
	install ${EXEOPTIONS} "${mysrc}" "${D}${EXEDESTTREE}"
done
