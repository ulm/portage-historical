# $Header: /local/data/ulm/cvs/history/var/cvsroot/gentoo-src/portage/bin/fperms,v 1.4 2002/12/15 14:19:21 carpaski Exp $

if [ ${#} -lt 2 ] ; then
	echo "${0}: at least two arguments needed"
	exit 1
fi

PERM="${1}"
shift
for FILE in $*; do
	chmod "${PERM}" "${D}${FILE}"
done
